<% @page_title = capture do %>
Create a New Todo - Todo App
<% end %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center"><%= current_user.username.titleize << "'s"|| "My" %> Todo List</h1>
    <h2>Create a New Todo</h2>
    <%= form_for @task do |f| %>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 2, class: 'form-control', placeholder: "Enter description" %>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
